<UserControl x:Class="Sticky.NoteWindowTitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Sticky"
             mc:Ignorable="d"
             d:DesignHeight="32"
             d:DesignWidth="306">

  <UserControl.Resources>
    <Style x:Key="TitleBarButton" TargetType="{x:Type Button}">
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="Focusable" Value="False"/>
      <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
      <Setter Property="FontSize" Value="16"/>
      <Setter Property="Foreground" Value="{DynamicResource Foreground}"/>
      <Setter Property="Margin" Value="0,0,0,0"/>
      <Setter Property="Opacity" Value="0.6"/>
      <Setter Property="TextBlock.FontFamily" Value="Segoe MDL2 Assets"/>
      <Setter Property="TextBlock.Foreground" Value="{DynamicResource Foreground}"/>
      <!-- https://wpf.2000things.com/tag/pixel-snapping/ -->
      <Setter Property="TextOptions.TextHintingMode" Value="Fixed"/> <!-- [Fixed, Animated] -->
      <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/> <!-- [Aliased, ClearType, Grayscale] -->
      <Setter Property="TextOptions.TextFormattingMode" Value="Display"/> <!-- [Ideal, Display] -->
      <Setter Property="UseLayoutRounding" Value="True"/>
      <Setter Property="Width" Value="32"/>
      <Style.Triggers>
        <Trigger Property="IsMouseOver" Value="True">
          <Setter Property="Background" Value="#FFF2F2F2"/>
        </Trigger>
      </Style.Triggers>
    </Style>
  </UserControl.Resources>

  <Grid>
    <DockPanel
      Background="{DynamicResource BackgroundSecondary}"
      Height="32"
      LastChildFill="False"
      MouseDown="OnMouseDown"
      MouseMove="OnMouseMove"
      Name="TitleBarPanel"
      VerticalAlignment="Top"
      >
        <Button Style="{StaticResource TitleBarButton}" Content="&#xE710;" DockPanel.Dock="Left" x:Name="ButtonAdd" ToolTip="New note" Click="OnAdd" FontSize="15"/>
        <Button Style="{StaticResource TitleBarButton}" Content="&#xE711;" DockPanel.Dock="Right" x:Name="ButtonClose" ToolTip="Close note" Click="OnClose"/>
        <Button Style="{StaticResource TitleBarButton}" Content="&#xE712;" DockPanel.Dock="Right" x:Name="ButtonMore" ToolTip="Menu" Click="OnMenu"/>
    </DockPanel>
  </Grid>
</UserControl>
