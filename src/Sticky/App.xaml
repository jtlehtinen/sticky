<Application
  x:Class="Sticky.App"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:ui="http://schemas.modernwpf.com/2019"
  xmlns:local="clr-namespace:Sticky"
  Startup="Main"
>
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Styles.xaml"/>
        <ResourceDictionary Source="/Components/Generic.xaml"/>

        <!-- @TODO: Changing theme does not work... -->
        <ui:ThemeResources>
          <ui:ThemeResources.ThemeDictionaries>
            <ResourceDictionary x:Key="Light">
              <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ModernWpf;component/ThemeResources/Light.xaml" />
              </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
            <ResourceDictionary x:Key="Dark">
              <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ModernWpf;component/ThemeResources/Dark.xaml" />
              </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
          </ui:ThemeResources.ThemeDictionaries>
        </ui:ThemeResources>
        <ui:XamlControlsResources/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>
</Application>
