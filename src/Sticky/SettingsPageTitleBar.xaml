<local:TitleBarBase
  x:Class="Sticky.SettingsPageTitleBar"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:ui="http://schemas.modernwpf.com/2019"
  xmlns:local="clr-namespace:Sticky"
>
  <DockPanel
    Background="Transparent"
    Height="40"
    LastChildFill="False"
    MouseDown="OnMouseDown"
    MouseMove="OnMouseMove"
  >
    <!-- Back Button -->
    <ui:TitleBarButton
      Content="&#xE72B;"
      ToolTip="Back"
      Click="OnBack"
      DockPanel.Dock="Left"
      Width="40"
      Height="Auto"
      FontSize="16"
    />

    <!-- Close Button -->
    <ui:TitleBarButton
      Content="&#xE947;"
      ToolTip="Close window"
      Click="OnClose"
      DockPanel.Dock="Right"
      Width="40"
      Height="Auto"
      FontSize="16"
    />
  </DockPanel>
</local:TitleBarBase>
