<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:system="clr-namespace:System;assembly=mscorlib"
>
  <system:String x:Key="ThemeName">Theme.Blue</system:String>
  <SolidColorBrush x:Key="ThemeColor" Color="#FF9EDFFF"/>

  <!-- NoteWindow Styles -->
  <SolidColorBrush x:Key="Background" Color="#FFE2F1FF"/> <!-- Note window background color -->
  <SolidColorBrush x:Key="BackgroundSecondary" Color="#FFCDE9FF"/> <!-- Note window title bar background color -->
  <SolidColorBrush x:Key="ForegroundColor" Color="#FF000000"/> <!-- Note control and note window foreground color -->
  <SolidColorBrush x:Key="ForegroundSecondary" Color="#FF616161"/> <!-- Toolbar buttons foreground -->
  <SolidColorBrush x:Key="SelectionBackgroundColor" Color="#FF307B98"/> <!-- Note window selection background color -->

</ResourceDictionary>
