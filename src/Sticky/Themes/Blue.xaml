<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:system="clr-namespace:System;assembly=mscorlib"
>
  <system:String x:Key="ThemeName">Theme.Blue</system:String>
  <SolidColorBrush x:Key="ThemeColor" Color="#FF9EDFFF"/>

  <!-- NoteWindow Styles -->
  <SolidColorBrush x:Key="Background" Color="#FFE2F1FF"/>
  <SolidColorBrush x:Key="BackgroundSecondary" Color="#FFCDE9FF"/>
  <SolidColorBrush x:Key="BackgroundHover" Color="#FFD3E1EE"/>
  <SolidColorBrush x:Key="Foreground" Color="#FF000000"/>
  <SolidColorBrush x:Key="ForegroundSecondary" Color="#FF616161"/>
  <SolidColorBrush x:Key="SelectionBackgroundColor" Color="#FF307B98"/>
</ResourceDictionary>
