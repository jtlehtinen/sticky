<ui:ContentDialog
  x:Class="Sticky.ConfirmDeleteDialog"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:sys="clr-namespace:System;assembly=mscorlib"
  xmlns:ui="http://schemas.modernwpf.com/2019"
  Title="Do you want to delete this note?"
  PrimaryButtonText="Delete"
  SecondaryButtonText="Keep"
  DefaultButton="Primary"
>
  <ui:ContentDialog.Resources>
    <sys:Double x:Key="ContentDialogMinHeight">184</sys:Double>
    <sys:Double x:Key="ContentDialogMaxHeight">300</sys:Double>
    <sys:Double x:Key="ContentDialogMinWidth">184</sys:Double>
    <sys:Double x:Key="ContentDialogMaxWidth">300</sys:Double>
  </ui:ContentDialog.Resources>

  <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
    <CheckBox x:Name="DontAskAgain" Content="Don't ask me again"/>
  </StackPanel>
</ui:ContentDialog>
