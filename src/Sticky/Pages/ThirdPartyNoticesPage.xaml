<UserControl
  x:Class="Sticky.ThirdPartyNoticesPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:sys="clr-namespace:System;assembly=mscorlib"
  xmlns:ui="http://schemas.modernwpf.com/2019"
  xmlns:local="clr-namespace:Sticky"
>
  <UserControl.Resources>
    <Style TargetType="{x:Type ui:TitleBarButton}" BasedOn="{StaticResource {x:Type ui:TitleBarButton}}">
      <Setter Property="Focusable" Value="True"/>
      <Setter Property="IsTabStop" Value="True"/>
      <Setter Property="FocusVisualStyle" Value="{DynamicResource {x:Static SystemParameters.FocusVisualStyleKey}}" />
      <Setter Property="ui:FocusVisualHelper.UseSystemFocusVisuals" Value="{DynamicResource UseSystemFocusVisuals}" />
      <Setter Property="ui:FocusVisualHelper.FocusVisualMargin" Value="1" />

      <Setter Property="Width" Value="40"/>
      <Setter Property="Height" Value="Auto"/>
      <Setter Property="FontSize" Value="16"/>
    </Style>
  </UserControl.Resources>

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- Title Bar -->
    <DockPanel
      x:Name="PartTitleBar"
      Background="Transparent"
      Height="40"
      LastChildFill="False"
      Grid.Row="0"
      Margin="0"
    >
      <!-- Back Button -->
      <ui:TitleBarButton
        DockPanel.Dock="Left"
        Content="&#xE72B;"
        ToolTip="Back"
        Click="OnBack"
      />

      <!-- Close Button -->
      <ui:TitleBarButton
        DockPanel.Dock="Right"
        Content="&#xE947;"
        ToolTip="Close window"
        Command="{Binding CloseCommand}"
      />
    </DockPanel>

    <ui:ScrollViewerEx
      Grid.Row="1"
      VerticalScrollBarVisibility="Auto"
      CanContentScroll="False"
      Margin="0,0,0,15"
      KeyboardNavigation.DirectionalNavigation="Once"
    >
      <ui:SimpleStackPanel
        Orientation="Vertical"
        Margin="10,0,10,10"
        Spacing="10"
      >
        <!-- Heading -->
        <TextBlock
          Style="{StaticResource SubtitleTextBlockStyle}"
          Text="Third Party Notices"
          FontWeight="Bold"
        />

        <Separator/>

        <TextBlock TextWrapping="Wrap">
        This software incorporates open source third party software. Below are attributions to said software.
        </TextBlock>

