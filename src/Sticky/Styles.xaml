<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="clr-namespace:Sticky"
>
  <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
  <local:ReverseBooleanToVisibilityConverter x:Key="ReverseBooleanToVisibilityConverter"/>
  <local:DateTimeConverter x:Key="DateTimeConverter"/>
  <local:BaseThemeToIndexConverter x:Key="BaseThemeToIndexConverter"/>
  <local:BackgroundToHoverConverter x:Key="BackgroundToHoverConverter"/>
  <local:BackgroundToPressedConverter x:Key="BackgroundToPressedConverter"/>
  <local:ReverseBooleanToGeometryCombineModeConverter x:Key="ReverseBooleanToGeometryCombineModeConverter"/>

  <!-- Global ToolTip Styles -->
  <Style TargetType="{x:Type ToolTip}">
    <Setter Property="ToolTipService.Placement" Value="Top"/>
  </Style>
</ResourceDictionary>
