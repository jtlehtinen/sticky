<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="clr-namespace:Sticky"
>
  <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
  <local:ReverseBooleanToVisibilityConverter x:Key="ReverseBooleanToVisibilityConverter"/>
  <local:StringToFlowDocumentConverter x:Key="StringToFlowDocumentConverter"/>
  <local:DateTimeConverter x:Key="DateTimeConverter"/>

  <!-- Global ToolTip Styles -->
  <Style TargetType="{x:Type ToolTip}">
    <Setter Property="ToolTipService.Placement" Value="Top"/>
  </Style>
</ResourceDictionary>
