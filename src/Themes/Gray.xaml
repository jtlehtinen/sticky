<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:system="clr-namespace:System;assembly=mscorlib"
>
  <system:String x:Key="ThemeName">Theme.Gray</system:String>
  <SolidColorBrush x:Key="ThemeColor" Color="#FFE0E0E0"/>

  <SolidColorBrush x:Key="Background" Color="#FFF3F2F1"/>
  <SolidColorBrush x:Key="BackgroundSecondary" Color="#FFE1DFDD"/>
  <SolidColorBrush x:Key="BackgroundHover" Color="#FFE3E2E1"/>
  <SolidColorBrush x:Key="Foreground" Color="#FF000000"/>
  <SolidColorBrush x:Key="ForegroundSecondary" Color="#FF616161"/>
  <SolidColorBrush x:Key="SelectionBackgroundColor" Color="#FF666666"/>

  <SolidColorBrush x:Key="TitleBar.Background.MouseOver" Color="#FFF3F3F3"/>
  <SolidColorBrush x:Key="TitleBar.Background.Pressed" Color="#FFDCDCDC"/>
  <SolidColorBrush x:Key="TitleBar.Foreground" Color="#FF616161"/>
</ResourceDictionary>
